<Window x:Class="FaceAttendance.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FaceAttendance.UI.ViewModels"
        xmlns:views="clr-namespace:FaceAttendance.UI.Views"
        mc:Ignorable="d"
        Title="Face Attendance System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AttendanceViewModel}">
            <views:AttendanceView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Face Attendance" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <Button Content="Dashboard" Command="{Binding NavigateToDashboardCommand}" Padding="10,5" Margin="5"/>
                <Button Content="Register Student" Command="{Binding NavigateToRegisterCommand}" Padding="10,5" Margin="5"/>
                <Button Content="Take Attendance" Command="{Binding NavigateToAttendanceCommand}" Padding="10,5" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>

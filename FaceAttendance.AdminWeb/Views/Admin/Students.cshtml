@model IEnumerable<FaceAttendance.Core.Models.Student>
@{
    ViewData["Title"] = "Student Management";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Student Management</h1>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Students" class="row gx-3 gy-2 align-items-center">
            <div class="col-sm-2">
                <input type="text" class="form-control" name="courseFilter" placeholder="Course" value="@ViewBag.CourseFilter">
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control" name="yearFilter" placeholder="Year" value="@ViewBag.YearFilter">
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control" name="semesterFilter" placeholder="Semester" value="@ViewBag.SemesterFilter">
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control" name="groupFilter" placeholder="Group" value="@ViewBag.GroupFilter">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-action="Students" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Student ID</th>
                <th>Course</th>
                <th>Year</th>
                <th>Sem</th>
                <th>Group</th>
                <th>Registered Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        <input type="text" name="name" value="@student.Name" form="update-form-@student.Id" class="form-control form-control-sm me-2" required />
                    </td>
                    <td>
                        <input type="text" name="studentId" value="@student.StudentId" form="update-form-@student.Id" class="form-control form-control-sm me-2" required />
                    </td>
                    <td>
                        <input type="text" name="course" value="@student.Course" form="update-form-@student.Id" class="form-control form-control-sm me-2" />
                    </td>
                    <td>
                        <input type="text" name="year" value="@student.Year" form="update-form-@student.Id" class="form-control form-control-sm me-2" />
                    </td>
                    <td>
                        <input type="text" name="semester" value="@student.Semester" form="update-form-@student.Id" class="form-control form-control-sm me-2" />
                    </td>
                    <td>
                        <input type="text" name="studentGroup" value="@student.StudentGroup" form="update-form-@student.Id" class="form-control form-control-sm me-2" />
                    </td>
                    <td>@student.CreatedAt.ToString("g")</td>
                    <td>
                        <!-- Update Form -->
                        <form id="update-form-@student.Id" asp-action="UpdateStudent" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@student.Id" />
                            <input type="hidden" name="faceImagePath" value="@student.FaceImagePath" />
                            <button type="submit" class="btn btn-sm btn-success me-2">Save</button>
                        </form>
                        
                        <!-- Delete Form -->
                        <form asp-action="DeleteStudent" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete @student.Name?');">
                            <input type="hidden" name="id" value="@student.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

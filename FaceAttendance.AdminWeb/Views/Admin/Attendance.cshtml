@model IEnumerable<FaceAttendance.Core.Models.AttendanceRecord>
@{
    ViewData["Title"] = "Attendance Logs";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Attendance Logs</h1>
    
    <div class="btn-toolbar mb-2 mb-md-0">
        <form asp-action="Attendance" method="get" class="d-flex bg-light p-2 rounded border">
            <input type="date" name="dateFilter" value="@ViewBag.SelectedDate" class="form-control me-2" />
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Attendance" class="btn btn-outline-secondary ms-2">Clear</a>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Student Name</th>
                <th>Student ID</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Date.ToString("yyyy-MM-dd")</td>
                    <td>@record.Time.ToString(@"hh\:mm\:ss")</td>
                    <td class="fw-bold">@record.StudentName</td>
                    <td>@record.StudentId</td>
                    <td>
                        <span class="badge bg-success">@record.Status</span>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">No attendance records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

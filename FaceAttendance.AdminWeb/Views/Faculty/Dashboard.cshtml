@model IEnumerable<FaceAttendance.Core.Models.ClassSession>
@{
    ViewData["Title"] = "Faculty Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Manage Sessions</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header bg-success text-white">Start a New Attendance Session</div>
    <div class="card-body">
        <form asp-action="CreateSession" method="post" class="row gx-3 gy-2 align-items-center">
            <div class="col-sm-2">
                <label class="visually-hidden" for="course">Course</label>
                <input type="text" class="form-control" name="course" id="course" placeholder="Course (e.g. CSE)" required>
            </div>
            <div class="col-sm-2">
                <label class="visually-hidden" for="year">Year</label>
                <input type="text" class="form-control" name="year" id="year" placeholder="Year" required>
            </div>
            <div class="col-sm-2">
                <label class="visually-hidden" for="semester">Semester</label>
                <input type="text" class="form-control" name="semester" id="semester" placeholder="Semester" required>
            </div>
            <div class="col-sm-3">
                <label class="visually-hidden" for="group">Group</label>
                <input type="text" class="form-control" name="group" id="group" placeholder="Group (e.g. Regular)" required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Open Session</button>
            </div>
        </form>
    </div>
</div>

<h3>Recent Sessions</h3>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Course / Year / Sem / Group</th>
                <th>Status</th>
                <th>Started At</th>
                <th>Ended At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model)
            {
                <tr>
                    <td>@session.Id</td>
                    <td>@session.Course / @session.Year / @session.Semester / @session.StudentGroup</td>
                    <td>
                        @if (session.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Closed</span>
                        }
                    </td>
                    <td>@session.StartedAt.ToLocalTime().ToString("g")</td>
                    <td>@(session.EndedAt?.ToLocalTime().ToString("g") ?? "-")</td>
                    <td>
                        @if (session.IsActive)
                        {
                            <form asp-action="EndSession" method="post">
                                <input type="hidden" name="id" value="@session.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">End Session</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { font-size: .875rem; background-color: #f8f9fa; }
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; padding: 48px 0 0; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1); }
        .sidebar .nav-link { font-weight: 500; color: #333; }
        .sidebar .nav-link.active { color: #2470dc; }
        .main-content { margin-left: 200px; padding: 20px; }
        .navbar-brand { font-weight: bold; padding: .75rem 1rem; font-size: 1rem; box-shadow: inset -1px 0 0 rgba(0, 0, 0, .25); }
    </style>
</head>
<body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="/">Campus Connect Admin</a>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-link px-3 btn btn-link text-white" style="text-decoration: none;">Sign out</button>
                </form>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/Admin/Students">
                                    Students Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Attendance">
                                    Attendance Logs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Faculties">
                                    Manage Faculties
                                </a>
                            </li>
                        }
                        
                        @if (User.IsInRole("Faculty"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Faculty/Dashboard">
                                    Manage Sessions
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Student/MyAttendance">
                                    My Attendance
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
